<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vi.smartsecuritysystem.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/family_accounts_btn"
            android:layout_width="@dimen/main_btn_dim"
            android:layout_height="@dimen/main_btn_dim"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_group_black_48dp"
            android:background="@android:color/transparent"
            android:text="@string/family_accounts"/>

        <Button
            android:id="@+id/guest_accounts_btn"
            android:layout_width="@dimen/main_btn_dim"
            android:layout_height="@dimen/main_btn_dim"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_public_black_48dp"
            android:background="@android:color/transparent"
            android:text="@string/guest_accounts"/>

        <Button
            android:id="@+id/camera_feed_btn"
            android:layout_width="@dimen/main_btn_dim"
            android:layout_height="@dimen/main_btn_dim"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_camera_black_48dp"
            android:background="@android:color/transparent"
            android:text="@string/camera_feed"/>

        <Button
            android:id="@+id/user_logs_btn"
            android:layout_width="@dimen/main_btn_dim"
            android:layout_height="@dimen/main_btn_dim"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_history_black_48dp"
            android:background="@android:color/transparent"
            android:text="@string/user_logs"/>

    </GridLayout>

</LinearLayout>
