<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vi.smartsecuritysystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FamilyAccountsActivity"
            android:label="@string/family_accounts"
            android:theme="@style/AppThemeFamily"/>
        <activity android:name=".GuestAccountsActivity"
            android:label="@string/guest_accounts"
            android:theme="@style/AppThemeGuest"/>
        <activity android:name=".CameraFeedActivity"
            android:label="@string/camera_feed"
            android:theme="@style/AppThemeCamera"/>
        <activity android:name=".UserLogsActivity"
            android:label="@string/user_logs"
            android:theme="@style/AppThemeLogs"/>
    </application>

</manifest>